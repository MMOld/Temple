package temple.utils.types 
{
	import temple.data.xml.IXMLParsable;

	/**
	 * @author Thijs Broerse
	 */
	internal final class ObjectVariableData implements IXMLParsable 
	{
		public var name:*;
		public var type:String;

		public function ObjectVariableData(name:* = null) 
		{
			this.name = name;
		}

		public function parseXML(xml:XML):Boolean
		{
			if(xml.@access == "writeonly") return false;
		
			if(xml.@uri.length()) return false;
		
			name = xml.@name;
			type = xml.@type;
		
			return name != null && type != null;
		}
	}
}
